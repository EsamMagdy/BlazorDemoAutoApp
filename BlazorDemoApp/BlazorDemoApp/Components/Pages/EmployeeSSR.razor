@using BlazorDemoApp.Client.Pages

@page "/employees/ssr"


<h1 class="text-center mt-5 display-3">Employee List Auto</h1>
<div class="container-xl">

    <button @onclick="UpdateMessage">Click me</button> @message


    @if (Employees is null)
    {
        <span>No Data...</span>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-3 justify-content-center justify-content-xl-start">

            @foreach (var movie in Employees)
            {
                <div class="col" @key="movie.Id">
                    @* <EmployeeCard Employee="movie" ModalId="movie-modal" OnBtnClick="GetMovieDetails" /> *@
                    <EmployeeCard Employee="movie" />
                </div>
            }

        </div>

    }
</div>

