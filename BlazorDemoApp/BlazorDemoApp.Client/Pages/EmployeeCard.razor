@using BlazorApp.Models


@if (Employee is not null)
{
    <div class="card h-100 fade-in">
        <div class="card-body border-top bg-light">
            <h5 class="card-title">@Employee.Name</h5>
          
        </div>
        <div class="card-footer text-end">
            @if (UseJSForBtn)
            {
                <button class="btn btn-primary" data-bs-target="#movie-modal" data-bs-toggle="modal" onclick="showMovieDetails(this)" data-movieId="@Employee.Id">
                    More Info
                </button>
            }
            else
            {

            @*     <button class="btn btn-primary" data-bs-target="#@ModalId" data-bs-toggle="modal"
                        @onclick="async () => await OnBtnClick.InvokeAsync(Employee.Id)">
                    More Info
                </button> *@

                <button class="btn btn-primary"> More Info</button>

            }
        </div>
    </div>
}
else
{
    <div class="card h-100">
        <img class="card-img-top" alt="Movie Poster" src="/img/PosterPlaceHolder.png" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title placeholder-glow">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary disabled placeholder col-6">
                More Info
            </button>
        </div>
    </div>
}

@code {
    [Parameter]
    public Employee? Employee { get; set; }

    [Parameter]
    public EventCallback<int> OnBtnClick { get; set; }

    [Parameter]
    public string? ModalId { get; set; }

    [Parameter]
    public bool UseJSForBtn { get; set; }
}
