@page "/employeeedit/{EmployeeId}"
<h3>EmployeeEdit</h3>

<div class="container">
    <div class="mb-3 row">
        <label for="nameId" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nameId" @bind="@Employee.Name">
        </div>
    </div>
    
    <div class="mb-3 row">
        <label for="emailId" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="emailId" @bind="@Employee.Email">
        </div>
    </div>

    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPassword">
        </div>
    </div>
</div>

